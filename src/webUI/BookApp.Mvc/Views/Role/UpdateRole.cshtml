@model BookApp.Mvc.Models.UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
}

<h1>UpdateRole</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateRole">
            <div class="form-group">
                <input asp-for="RoleID" hidden class="form-control" />
                <span asp-validation-for="RoleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label">Kitap Adı</label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Düzenle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>