@model BookApp.DataTransferObjects.Requests.UpdateBookRequest
@{
    ViewData["Title"] = "EditBook";
}

<h1>Kitabı Düzenle</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="BookID" hidden class="form-control" />
                <span asp-validation-for="BookID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Kitap Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklaması</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Fiyatı</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label">Kategori</label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.categories">
                    <option hidden="" value="@Model.CategoryID" disabled selected>Lütfen kategori seçin</option>
                </select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div> <br />
            <div class="form-group">
                <label asp-for="WriterID" class="control-label">Kategori</label>
                <select asp-for="WriterID" class="form-control" asp-items="ViewBag.writers">
                    <option hidden="" value="" disabled selected>Lütfen kategori seçin</option>
                </select>
                <span asp-validation-for="WriterID" class="text-danger"></span>
            </div> <br />
            <div class="form-group">
                <label asp-for="PublisherID" class="control-label">Kategori</label>
                <select asp-for="PublisherID" class="form-control" asp-items="ViewBag.publishers">
                    <option hidden="" value="" disabled selected>Lütfen kategori seçin</option>
                </select>
                <span asp-validation-for="PublisherID" class="text-danger"></span>
            </div> <br />
            <div class="form-group">
                <input type="submit" value="Düzenle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

